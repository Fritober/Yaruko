<Window x:Class="Projet.ShowByDeadline"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Show By Deadline" Height="400" Width="600">
    <Grid Margin="20">
        <!-- ListBox pour afficher les fichiers -->
        <ListBox x:Name="taskListBox" SelectionChanged="taskListBox_SelectionChanged" />

        <!-- Bouton pour fermer la fenêtre -->
        <Button Content="Fermer" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10" Click="CloseButton_Click"/>
    </Grid>
</Window>