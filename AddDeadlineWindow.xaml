<Window x:Class="Projet.AddDeadlineWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Deadline Window" Height="200" Width="500">
    <Grid Margin="20">
        <!-- Contenu de la fenêtre pour ajouter une deadline -->
        <StackPanel>

            <!-- Bouton pour sélectionner le fichier à modifier -->
            <Button Content="Sélectionner le fichier à modifier" Click="SelectFile_Click" Margin="0,0,0,10"/>

            <!-- TextBox pour afficher le chemin du fichier sélectionné -->
            <TextBox x:Name="filePathTextBox" IsReadOnly="True" Margin="0,0,0,10"/>

            <!-- DatePicker pour sélectionner la deadline -->
            <DatePicker x:Name="deadlineDatePicker" Margin="0,0,0,10"/>

            <!-- Bouton pour ajouter la deadline au fichier -->
            <Button Content="Ajouter la deadline" Click="AddDeadline_Click"/>
        </StackPanel>
    </Grid>
</Window>
